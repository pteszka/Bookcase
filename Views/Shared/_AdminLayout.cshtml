<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookcaseAdmin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/svg/align-right.svg">
    <style>
        #grad {
            background-image: linear-gradient(#333333, #0a0a0a);
        }

        #vertLine {
            border-left: thick solid #f2f2f2;
        }
    </style>
</head>



<body class="bg-light">
    <header id="grad">
        <nav class="navbar navbar-expand-sm  navbar-toggleable-sm navbar-light box-shadow mb-5 mr-4 ml-4">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/svg/book-white.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                    Bookcase
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <ul class="navbar-nav flex-row ml-md-auto text-white">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Publishers" asp-action="Index">Publishers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Genres" asp-action="Index">Genres</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Authors" asp-action="Index">Authors</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Books" asp-action="Index">Books</a>
                </li>        
                <li class="nav-item mr-2">
                    <a class="nav-link text-light" asp-controller="Users" asp-action="Index">Users</a>
                </li>
                <div class="border-left border-dark box-shadow">
                    <li class="nav-item  ml-2">
                        <a class="nav-link text-light" asp-controller="Accounts" asp-action="Logout">LogOut</a>
                    </li>
                </div>

            </ul>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
